                method: 'GET',
                url: directionsRequest,
            }).done(function (data) {
                var route = data.routes[0].geometry;

                map.addLayer({
                    id: 'route',
                    type: 'line',
                    source: {
                        type: 'geojson',
                        data: {
                            type: 'Feature',
